{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "outDir": "temp",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": ["src/**/*.ts", "config.ts"],
  "exclude": [
    "tests",
    "src/public/",
    "scripts",
    "eslint.config.ts",
    "vitest.config.js",
    // IA Le 01/12/2025
    /*  ðŸš« EXCLUSIONS OBLIGATOIRES POUR LE BUILD PROD  */
    "src/repos/MockOrm.ts",
    "src/repos/**/Mock*",
    "src/routes/JetonRoutes.ts",
    "src/routes/**/Jeton*"
  ]
}
